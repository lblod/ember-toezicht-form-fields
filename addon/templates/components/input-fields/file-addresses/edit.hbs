<div class="form__row u-padding--tb--tinier">
  <table class="data-table u-spacer--bottom--tiny">
    <tbody data-test-mn="url-box-list">
      {{#each fileAddresses as |fileAddress|}}
        <tr>
          <td>
            {{input
            class="input-field input-field--block input-field--small"
            placeholder="http://wwww.uw-bestuur.be/specifiek-document"
            value=fileAddress.address
            focus-out=(action "updateFileAddresses")
          }}
            <div class="button-group u-spacer--top--tiny">
              <a href={{fileAddress.address}} target="_blank" rel="noopener" class="u-spacer--bottom--tiny button button--small button--alt"><i class="vi vi-external"></i>Bekijk link</a>
              {{#if fileAddress.replicatedFile.downloadLink}}
                <a href={{fileAddress.replicatedFile.downloadLink}} download class="u-spacer--bottom--tiny button button--small button--alt"><i class="vi vi-document-small"></i>Download opgeslagen pagina<sup>*</sup></a>
              {{/if}}
              <a class="toggle u-spacer--bottom--tiny button button--small button--alt button--alt--warning" {{action "delete" fileAddress}} role="button"><i class="vi vi-cross vi-u-xs"></i>Verwijder&nbsp;link</a>
            </div>
          </td>
        </tr>
      {{/each}}
      <tr>
        <td>
          <div class="u-align-center">
            {{#unless fileAddresses}}
              <p class="u-spacer--tb--tiny">Nog geen links toegevoegd.</p>
            {{/unless}}
            <button class="button button--small u-spacer--tb--tiny" {{action "addUrlField"}}>
              <i class="vi vi-plus button__icon" aria-hidden="true"></i> Voeg nieuwe link toe
            </button>
            <div>
              <p class="smaller u-spacer--top--tiny">Enkel links naar specifieke documenten, geen overzichtspagina's.</p>
              <p class="smaller u-spacer--bottom--tiny"><sup>*</sup>Op het moment van versturen, wordt er een versie gedownload van de pagina die op de link te vinden is.</p>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
